#include <iostream>
using namespace std;

class Student {
private:
    int roll;
    float marks;

public:
    // Function to input details
    void getData() {
        cout << "Enter Roll Number: ";
        cin >> roll;
        cout << "Enter Marks: ";
        cin >> marks;
    }

    // Function to display details
    void showData() {
        cout << "Roll Number: " << roll << ", Marks: " << marks << endl;
    }
};

int main() {
    Student s[3];   // Array of 3 objects

    cout << "--- Enter Details for 3 Students ---" << endl;

    // Input for all objects
    for(int i = 0; i < 3; i++) {
        cout << "\nStudent " << i + 1 << ":" << endl;
        s[i].getData();
    }

    cout << "\n--- Displaying Student Details ---" << endl;

    // Output for all objects
    for(int i = 0; i < 3; i++) {
        s[i].showData();
    }

    return 0;
}
